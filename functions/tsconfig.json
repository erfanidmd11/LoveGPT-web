      "module": "ESNext",
      "lib": ["es2020"],
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "strict": false,
      "baseUrl": "./src"
    },
    "include": ["src"]
  }
  